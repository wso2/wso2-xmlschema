<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

    <parent>
        <groupId>org.apache.ws.commons.schema</groupId>
        <artifactId>xmlschema-parent</artifactId>
        <version>1.4.7-wso2v4-SNAPSHOT</version>
	<relativePath>../pom.xml</relativePath>
    </parent>

    <modelVersion>4.0.0</modelVersion>
    <groupId>org.apache.ws.commons.schema.wso2</groupId>
    <artifactId>XmlSchema</artifactId>
    <packaging>bundle</packaging>
    <name>xmlschema.wso2</name>
    <version>1.4.7.wso2v4-SNAPSHOT</version>
    <description>
        org.wso2.carbon.xmlschema. This bundle contains the resources needed for
        xmlschema commons project
    </description>
    <url>http://wso2.org</url>

    <dependencies>
        <dependency>
            <groupId>org.apache.ws.commons.schema</groupId>
            <artifactId>XmlSchema</artifactId>
            <version>1.4.7-wso2v4-SNAPSHOT</version>
            <optional>true</optional>
        </dependency>
    </dependencies>

    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.felix</groupId>
                <artifactId>maven-bundle-plugin</artifactId>
                
                <extensions>true</extensions>
                <configuration>
                    <instructions>
                        <Bundle-SymbolicName>${project.artifactId}</Bundle-SymbolicName>
                        <Bundle-Name>${project.artifactId}</Bundle-Name>
                        <Export-Package>
                            org.apache.ws.commons.schema.*;version="${project.version}",
                        </Export-Package>
                        <Import-Package>
                            !org.apache.ws.commons.schema.*,
                            javax.xml.namespace,
                            javax.xml.parsers,
                            javax.xml.transform.*,
                            javax.xml.xpath,
                            org.w3c.dom,
                            org.xml.sax
                        </Import-Package>
                        <Private-Package>
                        </Private-Package>
                    </instructions>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-surefire-plugin</artifactId>
                <version>${maven.surefire.plugin.version}</version>
            </plugin>
        </plugins>
    </build>

    <properties>
        <exp.pkg.version.xmlschema>1.4.7-wso2v3</exp.pkg.version.xmlschema>
        <maven.surefire.plugin.version>2.13</maven.surefire.plugin.version>
    </properties>

</project>

